{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "server:dev": "turbo dev --filter=apis",
    "dev:tool": "turbo dev --filter=tool --filter=webs",
    "dev:web": "turbo dev --filter=webs --filter=apis",
    "lint:all": "turbo lint",
    "lint": "biome check --fix --unsafe && biome lint .&& pnpm run lint:all"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,jsx,tsx,json,jsonc,vue,scss,css,html}": [
      "biome check --fix --unsafe",
      "biome check --write --no-errors-on-unmatched",
      "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched"
    ],
    "*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "devDependencies": {
    "@workspace/config": "workspace:*",
    "biome": "^0.3.3",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.16.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "next": "15.3.3",
    "typescript": "5.8.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-is": "19.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "bufferutil",
      "core-js",
      "core-js-pure",
      "esbuild",
      "sharp",
      "simple-git-hooks"
    ]
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
