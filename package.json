{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "server:c": "cd server/api && bun run controller",
    "server:dev": " npm-run-all --parallel server:start server:studio",
    "server:start": "cd server/api && bun run start",
    "server:push": "cd server/api && bun run push",
    "server:studio": "cd server/api && bun run db:studio",
    "dev:tool": "turbo dev --filter=tool --filter=webs",
    "dev:web": "turbo dev --filter=web",
    "lint:all": "turbo lint",
    "lint": "biome check --fix --unsafe && biome lint .&& pnpm run lint:all"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,jsx,tsx,json,jsonc,vue,scss,css,html}": [
      "biome check --fix --unsafe",
      "biome check --write --no-errors-on-unmatched",
      "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched"
    ],
    "*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "devDependencies": {
    "@workspace/config": "workspace:*",
    "biome": "^0.3.3",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.16.0",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core"
    ]
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
