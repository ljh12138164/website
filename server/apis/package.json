{
  "name": "apis",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "npm-run-all --parallel start db:studio",
    "start": "bun run src/index.ts",
    "build": "tsup src/index.ts --format esm --dts-only --clean --outDir dist",
    "docker:build:tsup": "tsup /app/src/index.ts --format esm --dts --outDir dist",
    "docker:build": "docker-compose  -f docker-compose.yml build",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "vercel": "vercel",
    "deploy": "vercel --prod"
  },
  "dependencies": {
    "@vercel/postgres": "^0.10.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "hono": "latest",
    "npm-run-all": "^4.1.5",
    "zod": "^3.24.2",
    "vercel": "43.1.0"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.1",
    "typescript": "^5.8.3"
  }
}
