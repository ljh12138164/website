{
  "name": "apis",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "npm-run-all --parallel start db:studio",
    "start":"deno run --watch --unstable-sloppy-imports --allow-all src/index.ts",
    "build": "tsup src/index.ts --format esm --dts-only --clean --outDir dist",
    "docker:build:tsup": "tsup /app/src/index.ts --format esm --dts --outDir dist",
    "docker:build": "docker-compose  -f docker-compose.yml build",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@hono/node-server": "^1.14.4",
    "@scalar/hono-api-reference": "^0.9.3",
    "@types/deno": "^2.3.0",
    "deno": "^2.3.6",
    "dotenv": "^16.5.0",
    "drizzle-graphql": "^0.8.5",
    "drizzle-orm": "^0.44.2",
    "graphql": "^16.11.0",
    "hono": "latest",
    "npm-run-all": "^4.1.5",
    "pg": "^8.16.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.16",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.1",
    "tsup": "^8.4.0",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3"
  }
}