{
  "name": "apis",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "npm-run-all --parallel start db:studio",
    "start": "bun run local.ts --watch",
    "lint": "biome lint",
    "build:tsup": "tsup src/index.ts --format esm --dts-only --clean --outDir dist",
    "docker:build:tsup": "tsup /app/src/index.ts --format esm --dts --outDir dist",
    "docker:build": "docker-compose  -f docker-compose.yml build",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "vercel": "vercel",
    "deploy": "vercel --prod"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/zod-validator": "^0.7.0",
    "@vercel/postgres": "^0.10.0",
    "await-to-js": "^3.0.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "hono": "4.8.2",
    "npm-run-all": "^4.1.5",
    "vercel": "43.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "biome": "latest",
    "drizzle-kit": "^0.31.1",
    "postgres": "^3.4.7",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}

