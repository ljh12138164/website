{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off"
      },
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "off",
        "noUndeclaredVariables": "off",
        "useExhaustiveDependencies": "off",
        "noSwitchDeclarations": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConsoleLog": "error",
        "noAssignInExpressions": "off"
      },
      "style": {
        "useConst": "error",
        "noNonNullAssertion": "off",
        "useTemplate": "error"
      },
      "a11y": {
        "recommended": true,
        "useKeyWithClickEvents": "off",
        "useMediaCaption": "off"
      }
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "lineWidth": 100
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": ["node_modules", "dist", ".next", "build", "public/_pagefind"],
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
